<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_background"
    tools:context="com.diplodesigns.huewatch.RoomSettings.BrightnessFragment">


    <android.support.wearable.view.WearableListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/brightnessView"
        android:layout_gravity="center"
        android:background="@drawable/lights_recycler_background"
        android:layout_marginBottom="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/roomNameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room Name"
        android:id="@+id/roomNameText"
        android:layout_gravity="center_horizontal|top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/up_arrow" />
</RelativeLayout>
