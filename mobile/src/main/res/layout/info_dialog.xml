<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#8c8c8c"
        android:layout_alignParentTop="true"
        android:id="@+id/view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignRight="@+id/view2"
        android:layout_alignLeft="@+id/view2"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#8c8c8c"
        android:layout_alignParentBottom="true"
        android:id="@+id/view2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <ScrollView
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lights_recycler_background"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_above="@+id/view2"
        android:layout_below="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mobile:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:id="@+id/textView7"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- Tap on room to toggle on/off"
                android:id="@+id/textView"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- Hold a room to open its settings where you can control its dimness and individual lights"
                android:id="@+id/textView2"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- To delete rooms, click on the trash can icon and tap on the rooms you wish to be deleted. Then one selected, tap the open trash can to delete"
                android:id="@+id/textView3"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- If you wish to discard the deletes, simply unselect all the rooms and tap the open trash can"
                android:id="@+id/textView4"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- Swipe down on the list to refresh the room states. This can show you if rooms have become unreachable or if someone else has the rooms toggles on/off"
                android:id="@+id/textView5"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Android Wear:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:id="@+id/textView8"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- Tap the room names to toggle on/off"
                android:id="@+id/textView9"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- Hold a room name to open its settings where you can control its dimness and individual lights"
                android:id="@+id/textView10"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- If your bridge is not detecting some of your lights, they are either defective or you must search for them manually using their serial numbers through the official Philips Hue app"
                android:id="@+id/textView11"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="App created and designed by Alias Apps, visit www.aliasapps.com for more information"
                android:id="@+id/textView6"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_marginTop="30dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>